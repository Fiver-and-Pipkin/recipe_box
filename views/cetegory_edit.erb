<h1>Update <%=@category.category_name() %> Category </h1>

<form action="/categories/<%= @category.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="category_name">Edit Category name:</label>
  <input id="category_name" name="category_name" type="text">

  <button type="submit" class="btn btn-sm btn-primary">Update</button>
</form>

<form action="/categories/<%= @category.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-sm btn-danger">Delete Category</button>
</form>

<p><a href="/">Return to Main Page</a></p>
